@page "/"
@inherits IndexBase



@if (Bord == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <input type="text" id="italicsCheck" @bind=Bord.AnswerNumber.Name />
    <button class="btn btn-danger" @onclick="() => StartGame()">スタート</button>
    <br />
    <br />

    <table class="table">
        <tbody>
            @for (int i = 0; i <= 5; i++)
            {
                <tr>
                    @for (int j = 0; j <= 5; j++)
                    {
                        var cell = Bord.Cells[i * 6 + j];
                        <td><button class=@GetCss(cell.Status) @onclick="() => BordClick(cell)">@cell.Value</button></td>
                    }
                </tr>
            }
        </tbody>
    </table>

    @Message
}
