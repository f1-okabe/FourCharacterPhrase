@page "/Mirror"
@inherits MirrorBase

<h3>Mirror</h3>

@if (Cells != null && Cells.Count >= 36)
{
    @Cells.First().Name
    <table class="table">
        <tbody>
            @for (int i = 0; i <= 5; i++)
            {
                <tr>
                    @for (int j = 0; j <= 5; j++)
                    {
                        var cell = Cells[i * 6 + j];
                        <td><button type="button" class=@GetCss(cell.Status) >@cell.Value</button></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
